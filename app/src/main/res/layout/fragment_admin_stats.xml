<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/green_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lê Thanh Bình"
            android:textColor="@color/text_title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAlignment="center"
            android:background="#8DD536"/>

        <TextView
            android:text="Thống kê tổng quan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/stroke_light"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvStat1"
                    android:text="Loại hàng: 0"
                    android:textStyle="bold"
                    android:textColor="@color/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvStat2"
                    android:layout_marginTop="6dp"
                    android:text="Sản phẩm: 0"
                    android:textColor="@color/text_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvStat3"
                    android:layout_marginTop="6dp"
                    android:text="Khách hàng: 0"
                    android:textColor="@color/text_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/stroke_light"/>

                <TextView
                    android:id="@+id/tvStat4"
                    android:layout_marginTop="12dp"
                    android:text="Tổng tồn kho: 0"
                    android:textColor="@color/text_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvStat5"
                    android:layout_marginTop="6dp"
                    android:text="Giá trị tồn kho: 0 đ"
                    android:textColor="@color/text_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnRefresh"
            android:text="Tải lại"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/green_600"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnLogout"
            android:text="Đăng xuất"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#E8F5E9"
            android:textColor="@color/green_700"/>

    </LinearLayout>
</ScrollView>
